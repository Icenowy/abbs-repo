mkdir -p build && cd build
AR=ar ../configure --prefix=/opt/abcross/i386 --target=i686-pc-linux-gnu --with-sysroot=/var/ab/cross-root/i686 --enable-shared --disable-multilib --enable-c99 --enable-long-long --enable-threads=posix --enable-languages=c,c++ --enable-__cxa_atexit &&
make AS_FOR_TARGET=/opt/abcross/i386/bin/i686-pc-linux-gnu-as LD_FOR_TARGET=/opt/abcross/i386/bin/i686-pc-linux-gnu-ld $ABMK && make DESTDIR=`pwd`/../abdist install
